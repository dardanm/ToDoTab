<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>


    </style>

    <style name="note_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBaseline">@+id/completedCheckBox</item>
        <item name="android:layout_alignBottom">@+id/completedCheckBox</item>
        <item name="android:layout_toRightOf">@+id/completedCheckBox</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="note_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/nameTextView</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_toRightOf">@+id/completedCheckBox</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <string-array name="labels_array">
        <item>Personal List</item>
        <item>Business List</item>
    </string-array>

</resources>
